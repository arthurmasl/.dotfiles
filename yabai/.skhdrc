

# modes
:: default
:: yab @

ctrl - m ; yab
yab < escape ; default

# navigation
yab < h : yabai -m window --focus west
yab < j : yabai -m window --focus south
yab < k : yabai -m window --focus north
yab < l : yabai -m window --focus east

yab < w : yabai -m window --focus recent

# moving windows
yab < left : yabai -m window --warp west
yab < down : yabai -m window --warp south
yab < up : yabai -m window --warp north
yab < right : yabai -m window --warp east

# displays
# yab < p : yabai -m display --focus prev
yab < n : yabai -m display --focus recent

# move to display
yab < shift - h : yabai -m window --display prev --focus
yab < shift - l : yabai -m window --display next --focus

# zoom
yab < m: yabai -m window --toggle zoom-fullscreen
yab < f: yabai -m window --toggle native-fullscreen

# resize windows
yab < b : yabai -m space --balance

yab < shift - 0 : yabai -m window --resize left:-100:0; \
                  yabai -m window --resize right:-100:0
yab < 4 : yabai -m window --resize bottom:0:100; \
                  yabai -m window --resize top:0:100
yab < 5 : yabai -m window --resize top:0:-100; \
                  yabai -m window --resize bottom:0:-100
yab < 6 : yabai -m window --resize right:100:0; \
                  yabai -m window --resize left:100:0


# rotate
yab < r : yabai -m space --rotate 270
yab < shift -r : yabai -m space --rotate 90

yab < x : yabai -m space --mirror x-axis
yab < v : yabai -m space --mirror y-axis

yab < s : yabai -m window --toggle split
yab < z : yabai -m window --toggle zoom-parent
yab < o : yabai -m window --grid 1:3:0:0:2:1


# launch a new terminal instance when in either 'default' or 'test' mode
# default, test < cmd - return : open -na /Applications/Terminal.app
